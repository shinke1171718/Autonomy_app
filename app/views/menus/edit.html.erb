<div class="menu-registration-container">

  <div class="menu-registration-title">
    <h1>献立登録（１/２）</h1>
  </div>

  <div class="menu-registration-input">
    <%= form_with model: @menu, url: user_menu_path, local: true, method: :patch do |f| %>

      <div class="name-registration-field">
        <%= f.text_field :menu_name, autofocus: true, autocomplete: "menu_name", placeholder: "献立名" %>
      </div>

      <div class="menu-registration-field">
        <%= f.text_field :menu_contents, autofocus: true, autocomplete: "menu_contents", placeholder: "献立内容" %>
      </div>

      <div class="content-registration-field">
        <%= f.text_area :contents, autofocus: true, autocomplete: "contents", placeholder: "作り方" %>
      </div>

      <div class="image-registration-field">
        <%= f.file_field :image, autofocus: true, autocomplete: "image", placeholder: "献立の写真" %>
      </div>

      <div class="menu-registration-actions">
        <%= f.submit "次へ" %>
      </div>
    <% end %>

    <% if @new_menu.blank? %>
      <div class="menu-registration-back-button">
        <%= button_to "戻る", user_menus_path, class: "back-button", method: :get %>
      </div>
    <% else %>
      <div class="menu-registration-back-button">
        <%= button_to "戻る", destroy_related_data_user_menu_path(current_user, @menu), class: "back-button", method: :delete %>
      </div>
    <% end %>

  </div>
</div>